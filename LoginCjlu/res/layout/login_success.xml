<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none"
    android:background="#B9D3EE">
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#B9D3EE"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#7D9EC0"
        android:orientation="horizontal"
        android:paddingLeft="0dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="欢迎 学号: "
            android:textColor="#FFFFFF"
            android:textSize="8pt" >
        </TextView>

        <TextView
            android:id="@+id/userid_show"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="8pt" >
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text=" 姓名: "
            android:textColor="#FFFFFF"
            android:textSize="8pt" >
        </TextView>

        <TextView
            android:id="@+id/username_show"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="8pt" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="0dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="现有功能："
            android:textColor="#000080"
            android:textSize="8pt" >
        </TextView>

        <TextView
            android:id="@+id/sessionid_show"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="6pt"
        android:orientation="horizontal"
        android:paddingLeft="0dip" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="0dip" >

        <Button
            android:id="@+id/getinfo"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="等级考试查询" >
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="6pt"
        android:orientation="horizontal"
        android:paddingLeft="0dip" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="0dip" >

        <Button
            android:id="@+id/getks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="考试地点查询" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="6pt"
        android:orientation="horizontal"
        android:paddingLeft="0dip" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="0dip" >

        <Button
            android:id="@+id/getcj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="考试成绩查询" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="6pt"
        android:orientation="horizontal"
        android:paddingLeft="0dip" >
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="0dip" >

        <Button
            android:id="@+id/getkb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人课表查询" />
    </LinearLayout>
        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="6pt"
        android:orientation="horizontal"
        android:paddingLeft="0dip" >
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="0dip" >

        <Button
            android:id="@+id/getby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我选了什么题" />
    </LinearLayout>
    
            <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="6pt"
        android:orientation="horizontal"
        android:paddingLeft="0dip" >
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="0dip" >

        <Button
            android:id="@+id/gettx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的信息头像" />



    </LinearLayout>

</LinearLayout>
</ScrollView>