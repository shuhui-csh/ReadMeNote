<?xml version="1.0" encoding="utf-8"?> 
<selector xmlns:android="http://schemas.android.com/apk/res/android"> 
   <!--  radiobox 按下的时候 -->
    <item android:state_pressed="true"> 
        <shape> 
            <gradient android:startColor="#FFC3CE" android:endColor="#ffffff" 
                android:angle="90" /> 
           
        </shape> 
    </item> 
  <!-- radiobox 被选择时候 -->
    <item android:state_checked="true"> 
        <shape> 
            <gradient android:startColor="#FFC3CE" android:endColor="#ffffff" 
                android:angle="90" /> 
          
        </shape> 
    </item> 
  <!-- radiobox 在正常状态下 -->
    <item> 
        <shape> 
            <gradient android:startColor="#EF82EF" android:endColor="#ffffff" 
                android:angle="90" /> 
       </shape>     
    </item> 
</selector>  